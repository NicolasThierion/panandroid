<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/capture_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".capture.CaptureActivity" >

    <!-- gl renderer -->

    <RelativeLayout
        android:id="@+id/gl_renderer_container"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ProgressBar
            android:id="@+id/starting_progress_spinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <fr.ensicaen.panandroid.capture.ShutterButton
        android:id="@+id/btn_shutter"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:contentDescription="@string/btn_shutter"
        android:src="@drawable/btn_shutter_photo" />

</RelativeLayout>
